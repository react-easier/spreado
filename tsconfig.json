{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5"
  },
  "include": ["."],
  "exclude": [
    "/**/node_modules",
    "/**/lib",
    "/**/es",
    "/**/dist",
    "/**/out",
    "/**/build",
    "/**/coverage",
    "/**/fixtures"
  ]
}
